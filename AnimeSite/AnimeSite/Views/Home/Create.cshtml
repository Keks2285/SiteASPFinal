@model AnimeSite.Models.User
@{
    ViewBag.Title = "Добавление пользователя";
}
<form asp-action="CreateByAdmin" asp-controller="home">
    <div class="form-group">
        <input name="email" type="email" asp-for="Email" class="form-control" placeholder="Email" />
    </div>
    <div class="form-group">
        <input type="text" asp-for="Login" class="form-control" placeholder="Login" />
    </div>
    <div class="form-group">
        <input name="password" type="password" asp-for="Password" class="form-control" placeholder="**********" />
    </div>
    <div class="form-group">
        <a>Админ:</a>
        <input type="checkbox" asp-for="Admin" />
    </div>
    <div class="form-group">
        <input type="submit" value="Создать" class="btn bnt-default" />
    </div>

</form>