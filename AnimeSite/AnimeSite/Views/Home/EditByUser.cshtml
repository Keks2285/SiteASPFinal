@model AnimeSite.Models.User
@{
    ViewBag.Title = "Изменение";
}
<form asp-action="EditByUser" asp-controller="home" style=" margin-top:10%">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PhotoLink" />
    <div class="form-group">
        <input type="email" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <input type="text" asp-for="Login" class="form-control" />
    </div>
    <div class="form-group">
        <input type="text" asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Изменить" class="btn bnt-default" />
    </div>
</form>