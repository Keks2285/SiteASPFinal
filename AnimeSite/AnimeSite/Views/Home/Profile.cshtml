@model IndexViewModel
@{
    ViewData["Title"] = "Профиль";
}
<!DOCTYPE html>
<html>
    <head>

    </head>
    <body>     
        <h1> Ваш профиль </h1>
        
        <div class="lft">
            <div>
            <input type="image" src="@Model.User.PhotoLink" alt="У вас пока нет фото" @*@Model.User.PhotoLink*@
                   style="width:100px; height:100px; border-block-color:black; border-width:2px;
      position:absolute; left:1%; top:5%;" />
            </div>
        <div>
            <form asp-action="AddFiles" enctype="multipart/form-data">
                
                <input type="file" name="file" />
            
                <input type="submit" value="Отправить" />
            </form>
            </div>
        </div>
        
      
     <a asp-action="CreatePost" style="font-size: 20px;
      background:lightgray;
      border-radius: 8px 8px 8px 8px;
      position: absolute;
      left: 60%;
      top: 2%;"> &nbspДобавить пост&nbsp </a>
            <a asp-action="EditByUser" style="        font-size: 20px;
        background: lightgray;
        border-radius: 8px 8px 8px 8px;
        position: absolute;
        left: 35%;
        top: 2%;"> &nbspИзменить информацию о себе&nbsp </a>
        <a asp-action="SearchUsers" style="        font-size: 20px;
        background: lightgray;
        border-radius: 8px 8px 8px 8px;
        position: absolute;
        left: 52%;
        top: 2%;"> &nbspПоиск людей&nbsp </a>
            <h2>Посты</h2>

            <table>
                <tr>
                    <td>
                        <a>
                            Описание
                        </a>
                    </td>
                    <td style="color:dodgerblue">
                        Оценка
                    </td>
                </tr>
                @foreach (var item in Model.Posts)
                {
                    <tr>

                        <td style="border-left-width:1px; border-color:dimgray;">
                            @item.Description
                        </td>
                        <td style="border-width:1px; border-color:dimgray;">
                            @item.Rating
                        </td>
                        <td style="border-width:1px; border-color:dimgray;">
                            @*<a asp-action="Details" asp-controller="home" asp-route-id="@item.Id"> </a>
                        <a asp-action="Delete" asp-controller="home" asp-route-id="@item.Id"> </a>*@
                            <a asp-action="PostEditByUser" asp-controller="home" asp-route-id="@item.Id">Детали</a>
                        </td>
                    </tr>
                }
            </table>
        
    </body>


</html>