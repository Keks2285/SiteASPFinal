@model IndexViewModel
@{
    ViewData["Title"] = "Профиль";
}
<!DOCTYPE html>
<html>
    <head>

    </head>
    <body>
        <h1>Ваш профиль</h1>
        <input type="image" src="" alt="У вас пока нет фото"
               style="width:100px; height:100px; border-block-color:black; border-width:2px;
               position:absolute; left:1%; top:5%;" />
        <a style="font-size:20px" asp-action="CreatePost">Добавить пост</a>
        <table>

            @foreach (var item in Model.Post) @*список постов*@
            {
                <tr>
                    <td style="background-color: lightgray;  border-left-width:1px; border-color:dimgray;">
                        @item.Id
                    </td>
                    <td style="border-left-width:1px; border-color:dimgray;">
                        @item.Description
                    </td>
                    <td style="border-width:1px; border-color:dimgray;">
                        @item.Rating
                    </td>
                    <td style="border-width:1px; border-color:dimgray;">
                        <a asp-action="Details" asp-controller="home" asp-route-id="@item.Id"> </a>
                        <a asp-action="Delete" asp-controller="home" asp-route-id="@item.Id"> </a>
                        <a asp-action="Edit" asp-controller="home" asp-route-id="@item.Id"> </a>
                    </td>

                </tr>
            }

        </table>
    </body>


</html>